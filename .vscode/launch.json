    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        // Prepare dataset
        {
            "name": "Prepare Shakespeare dataset",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/data/shakespeare_char/prepare.py",
            "console": "integratedTerminal"
        },
        // Run train.py with arguments
        {
            "name": "Train small model for debugging",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/train.py",
            "console": "integratedTerminal",
            "args": [
                "--batch_size=2",
                "--compile=False",
                "--device=cpu",
                "--gradient_accumulation_steps=2",
                "--n_layer=4",
                "--n_head=4",
                "--n_embd=384",
                "--block_size=128",
            ],
        },
        {
            "name": "Train with GPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/train.py",
            "console": "integratedTerminal",
            "args": [
                "--batch_size=32",
                "--compile=False",
                "--device=gpu"
            ],
        }
    ]
}